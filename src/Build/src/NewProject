#!/usr/bin/env php
<?php
$Projeto = trim( $argv[1] );
if ( $Projeto == "" ){
  echo "-----------------------------------------------------------------";
  echo "------------- INFORME PROJETO | 1º PARAMETRO --------------------";
  echo "-----------------------------------------------------------------";
  exit(2);
}

$ProjectsAvailable = array( "Ecidade", "EcidadeOnline", "EcidadeOnline2", "PortalDoAluno", "Transparencia", "MatriculaOnline", "PortalDoServidor" );
if ( ! in_array( $Projeto, $ProjectsAvailable ) ){
  echo "-----------------------------------------------------------------";
  echo "------------------------ PROJETO INVÁLIDO -----------------------";
  echo "-----------------------------------------------------------------";
  exit(2);
}

$Diretorio = trim ( $argv[2] );
if ( $Diretorio == "" ){
  echo "-----------------------------------------------------------------";
  echo "------------- INFORME DIRETORIO | 2º PARAMETRO ------------------";
  echo "-----------------------------------------------------------------";
  exit(2);
}

$Versao = trim( $argv[3] );
if ( $Versao == "" ){
  echo "-----------------------------------------------------------------";
  echo "-------------- INFORME VERSAO | 3º PARAMETRO --------------------";
  echo "-----------------------------------------------------------------";
  exit(2);
}

if ( isset( $argv[4] ) ){
  $Tags = trim( $argv[4] );
  if ( $Tags == "" ){
    $Tags = array();
  } else {
    $Tags = explode( ',', $Tags );
  }
}

try {
  require_once __DIR__ . '/class/' . $Projeto . 'Project.class.php';
  $ClassName = $Projeto . "Project";
  $Project = new $ClassName( $Diretorio );
  $Project->buildVersion( $Versao );
  if ( ! empty( $Tags ) ){
    $Project->checkoutTag( $Tags );
  }
  $Project->init();
} catch (Exception $e) {
  echo "-----------------------------------------------------------------";
  echo $e->getMessage();
  echo "-----------------------------------------------------------------";
  exit(2);
}
exit(0);
?>
